{
  "manifest_version": 3,
  "name": "Hbe",
  "version": "1.0.0",
  "description": "Extracts text content from the body of web pages and summarize it.",
  "action": { "default_popup": "index.html" },
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "background": {
    "service_worker": ["src/background.js"]
  },
  "icons": {
    "16": "public/16.png",
    "32": "public/32.png",
    "48": "public/48.png",
    "128": "public/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["src/content-script.js"]
    }
  ]
}